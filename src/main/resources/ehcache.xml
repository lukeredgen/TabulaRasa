<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.arbysoft.tabularasa.domain.User" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.Authority" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.FeatureFunction" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.FeatureFunction.releasefeatures" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.FeatureFunction.subfunctions" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.Organisation" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.Organisation.projects" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.Project" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.Project.projectreleases" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.ProjectRelease" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.ProjectRelease.releasefeatures" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.ReleaseFeature" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.ReleaseFeature.featurefunctions" uses-template="simple"/>

    <cache alias="com.arbysoft.tabularasa.domain.ReleaseFeature.projectreleases" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
